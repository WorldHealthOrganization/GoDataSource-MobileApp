require_relative '../node_modules/react-native/scripts/react_native_pods'
require_relative '../node_modules/@react-native-community/cli-platform-ios/native_modules'

platform :ios, '11.0'

source 'https://github.com/CocoaPods/Specs.git'
target 'who_mobile' do
  config = use_native_modules!

  use_react_native!(
      :path => config[:reactNativePath],
      # to enable hermes on iOS, change `false` to `true` and then install pods
      :hermes_enabled => false
    )

  #pod 'SQLCipher'
  pod 'Parse'

  # Add new pods below this line
  #pod 'RNSqlite2', :path => '../node_modules/react-native-sqlcipher-2'


  pod 'ReactNativePermissions', :path => '../node_modules/react-native-permissions'
  #pod 'RNPermissions', :path => '../node_modules/react-native-permissions'

  #permissions_path = '../node_modules/react-native-permissions/ios'
  #pod 'Permission-Camera', :path => "#{permissions_path}/Camera"

 pod 'RNKeychain', :path => '../node_modules/react-native-keychain'
 pod 'TouchID', :path => '../node_modules/react-native-touch-id'

  #pod 'ReactNativeDarkMode', :path => '../selfnode_modules/react-native-dark-mode'

  #pod 'RNDateTimePicker', :path => '../node_modules/@react-native-community/datetimepicker'

  #pod 'react-native-webview', :path => '../node_modules/react-native-webview'


  #pod 'react-native-version-number', :path => '../node_modules/react-native-version-number'

  #pod 'RNCAsyncStorage', :path => '../node_modules/@react-native-community/async-storage'

  pod 'RNBcrypt', path: '../node_modules/react-native-bcrypt'
  #pod 'SentryReactNative', :path => '../node_modules/react-native-sentry'


  # pod 'react-native-async-storage', :path => '../node_modules/@react-native-community/async-storage'
  # pod 'react-native-document-picker', :path => '../node_modules/react-native-document-picker'
  # pod 'RNFS', :path => '../node_modules/react-native-fs'

  # Enables Flipper.
    #
    # Note that if you have use_frameworks! enabled, Flipper will not work and
    # you should disable the next line.
   #use_flipper!()

   target 'who_mobileTests' do
       inherit! :complete
       # Pods for testing
     end

  post_install do |installer|
    react_native_post_install(installer)
    installer.pods_project.targets.each do |target|
                if target.name == "RNSqlite2"
                end
            end
  end

end